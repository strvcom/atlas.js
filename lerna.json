{
  "lerna": "3.8.0",
  "version": "independent",
  "loglevel": "success",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "release/*"
      ],
      "conventionalCommits": true,
      "message": "chore: release",
      "signGitCommit": true,
      "ignoreChanges": [
        "test/**",
        "package-lock.json"
      ]
    }
  }
}
